@model Article

    <div class="editor-page">
        <div class="container page">
            <div class="row">

                <div class="col-md-10 offset-md-1 col-xs-12">
                    <form asp-action="CreateArticle" method="POST">
                        <fieldset>
                            <fieldset class="form-group">
                                <input asp-for="Title" type="text" class="form-control form-control-lg" placeholder="Article Title">
                            </fieldset>
                            <fieldset class="form-group">
                                <input asp-for="Description" type="text" class="form-control" placeholder="What's this article about?">
                            </fieldset>
                            <fieldset class="form-group">
                                <textarea asp-for="Body" class="form-control" rows="8" placeholder="Write your article (in markdown)"></textarea>
                            </fieldset>
                            @*<fieldset class="form-group">
                                <input asp-for="" type="text" class="form-control" placeholder="Enter tags"><div class="tag-list"></div>
                            </fieldset>*@
                            <button class="btn btn-lg pull-xs-right btn-primary" type="submit">
                                Publish Article
                            </button>
                        </fieldset>
                    </form>
                </div>

            </div>
        </div>
    </div>